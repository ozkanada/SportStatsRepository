<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sportstats</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>  
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.javateam.sportstats.entity.SportType"></mapping>
        <mapping class="com.javateam.sportstats.entity.Country"></mapping>
        <mapping class="com.javateam.sportstats.entity.League"></mapping>
        <mapping class="com.javateam.sportstats.entity.Season"></mapping>
        <mapping class="com.javateam.sportstats.entity.Match"></mapping>
        <mapping class="com.javateam.sportstats.entity.Team"></mapping>
        <mapping class="com.javateam.sportstats.entity.Player"></mapping>
        <mapping class="com.javateam.sportstats.entity.Position"></mapping>
        <mapping class="com.javateam.sportstats.entity.Image"></mapping>
        <mapping class="com.javateam.sportstats.entity.Cadre"></mapping>
        <mapping class="com.javateam.sportstats.entity.Stand"></mapping>
    </session-factory>
</hibernate-configuration>